<Page x:Class="ForeignSchoolStuff.Views.Pages.ProductsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ForeignSchoolStuff.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="ProductsPage">

    <Grid>
        <WrapPanel ItemHeight="250" ItemWidth="250" Name="ItemsPanel" Style="{DynamicResource ItemsPanel}">
            <WrapPanel Name="Item">
                <Image Source="{Binding MainImagePath}"/>
                <TextBlock Text="{Binding Title}"/>
            </WrapPanel>
        </WrapPanel>
    </Grid>
</Page>
